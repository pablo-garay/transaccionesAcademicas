<div class="page-header">
<h2><?php echo sprintf('Cambiar la dirección de email de %s', $this->zfcUserDisplayName()); ?></h2>
</div>
<?php if ($status === true) : ?>
<div class="alert alert-success">Dirección de email actualizada.</div>
<?php elseif ($status === false) : ?>
<div class="alert alert-error">No se pudo cambiar la dirección de email. Por favor inténtelo de nuevo</div>
<?php endif; ?>
<?php

$form = $this->changeEmailForm;

$form->prepare();
$form->setAttribute('action', $this->url('zfcuser/changeemail'));
$form->setAttribute('method', 'post');

?>
<?php echo $this->form()->openTag($form) ?>
    <dl class="zend_form">
    <?php foreach ($form as $element): ?>
        <?php if ($element->getLabel() != null): ?>
            <dt><?php echo $this->formLabel($element) ?></dt>
        <?php endif ?>
        <?php if ($element instanceof Zend\Form\Element\Button): ?>
            <dd><?php echo $this->formButton($element) ?></dd>
        <?php elseif ($element instanceof Zend\Form\Element\Captcha): ?>
            <dd><h5><span style="color:#E00C0C"><?php echo $this->formCaptcha($element) . $this->formElementErrors($element) ?></span></h5></dd>
        <?php else: ?>
            <dd><h5><span style="color:#E00C0C"><?php echo $this->formInput($element) . $this->formElementErrors($element) ?></span></h5></dd>
        <?php endif ?>
    <?php endforeach ?>
    </dl>
    <?php if ($this->redirect): ?>
        <input type="hidden" name="redirect" value="<?php echo $this->redirect ?>" />
    <?php endif ?>
    <input type="submit" value="Guardar" class="btn btn-primary"/> <a href="/user/editarDatos" class="btn btn-primary"/>Cancelar</a>        
<?php echo $this->form()->closeTag() ?>
